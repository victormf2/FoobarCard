<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping.dtd">
<hibernate-mapping>
  <class name="Card" table="card">
      <id name="cardNumber" column="card_number">
          <generator class="assigned"></generator>
      </id>
      <property name="cardLimit" column="card_limit"/>
  </class>
</hibernate-mapping>
